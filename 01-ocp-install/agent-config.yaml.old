apiVersion: v1alpha1
kind: AgentConfig
metadata:
  name: ocp419

rendezvousIP: 192.168.102.5

additionalNTPSources:
  - time.google.com
  - 0.rhel.pool.ntp.org

hosts:
  #############################################
  # MASTER-0 (Node 1)
  #############################################
  - hostname: master-0
    role: master
    rootDeviceHints:
      deviceName: /dev/sdc
    interfaces:
      - name: eno1
        macAddress: BC:97:E1:D4:9D:C0
      - name: eno2
        macAddress: BC:97:E1:D4:9D:C1
    networkConfig:
      interfaces:
        - name: bond0
          type: bond
          state: up
          ipv4:
            enabled: true
            address:
              - ip: 192.168.102.5
                prefix-length: 24
            dhcp: false
          link-aggregation:
            mode: 802.3ad
            port:
              - eno1
              - eno2
        - name: bond0.103
          type: vlan
          state: up
          vlan:
            base-iface: bond0
            id: 103
          ipv4:
            enabled: true
            address:
              - ip: 192.168.103.5
                prefix-length: 24
            dhcp: false
      dns-resolver:
        config:
          server:
            - 8.8.8.8
            - 8.8.4.4
            - 192.168.2.100  
          search:
            - crucible.iisl.com
      routes:
        config:
          - destination: 0.0.0.0/0
            next-hop-address: 192.168.102.1
            next-hop-interface: bond0

  #############################################
  # MASTER-1 (Node 2)
